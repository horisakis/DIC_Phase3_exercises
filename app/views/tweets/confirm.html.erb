<div class="container">
  <h2>以下の内容で送信する</h2>
  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="tweet-content">
            <%=  @tweet.content %>
          </div>
          <div class="tweet-image">
            <%= image_tag(@tweet.image, class: :upload_image) %>
          </div>
        </div>
        <div class="btn-confirm">
          <%= form_with(model: @tweet, url: tweets_path, local: true, class: "form_commit") do |form| %>
              <%= form.hidden_field :content %>
              <%= hidden_field_tag :"cache[image]",@tweet.image.cache_name %>
              <!-- <%= form.hidden_field :"cache[image]", :vaule => @tweet.image.cache_name %> -->

              <%= form.submit "登録する", :class => "btn btn-primary" %>
          <% end %>

          <%= form_with(model: @tweet, url: new_tweet_path, local: true, method: "get", class: "form_back") do |form| %>
              <%= form.hidden_field :content %>
              <%= hidden_field_tag :"cache[image]",@tweet.image.cache_name %>
              <!-- <%= form.hidden_field :"cache[image]", :value => @tweet.image.cache_name %> -->
              <%= form.submit "戻る", name: "back", :class=> "btn btn-default" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
