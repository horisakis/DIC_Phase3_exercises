<%= form_with(model: @tweet, local: true, url: choose_new_or_edit) do |form| %>
  <% if @tweet.errors.any? %>
    <div class="alert alert-danger" id="error_explanation">
      <h3><%= @tweet.errors.count %>件のエラーがあります</h3>
      <ul>
        <% @tweet.errors.full_messages.each do |msg|%>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="tweet_content form-group col-md-offset-4 col-md-4">
        <%= form.text_area :content, {:class => "form-control", :placeholder => "本文"} %>
        <%= image_tag(@tweet.image, class: :upload_image) if @tweet.image.present? %>
        <%= form.file_field :image %>
        <%= form.hidden_field :image_cache %>
        <%= form.submit "投稿", :class => "btn-submit btn btn-primary" %>
    </div>
  </div>
<% end %>
